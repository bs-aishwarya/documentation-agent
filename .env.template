# Environment Configuration Template for Document Q&A Agent
# Copy this file to .env and configure your settings

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Primary LLM provider (openai, gemini, hf, local)
LLM_PROVIDER=hf

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Google Gemini Configuration (alternative to OpenAI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2000
GEMINI_TEMPERATURE=0.1

# Hugging Face / Local model configuration (open-source)
# Use a lightweight default to avoid large downloads. Update to a bigger model when ready.
HF_MODEL=gpt2
HF_AUTH_TOKEN=your_hf_token_here   # optional; required if using HF Hosted API
HF_USE_LOCAL=true                  # default to local transformers runtime
HF_MAX_TOKENS=512
HF_TEMPERATURE=0.3

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================

# Vector store type (chroma, faiss)
VECTOR_STORE_TYPE=chroma

# ChromaDB Settings
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=document_chunks

# FAISS Settings
FAISS_INDEX_PATH=./data/faiss/document_index.faiss
FAISS_INDEX_TYPE=IndexFlatIP

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# =============================================================================
# DOCUMENT PROCESSING CONFIGURATION
# =============================================================================

# Text chunking settings
DOCUMENT_PROCESSING_CHUNK_SIZE=1000
DOCUMENT_PROCESSING_CHUNK_OVERLAP=200
DOCUMENT_PROCESSING_MIN_CHUNK_SIZE=100

# Processing settings
DOCUMENT_PROCESSING_EXTRACT_IMAGES=true
DOCUMENT_PROCESSING_EXTRACT_TABLES=true
DOCUMENT_PROCESSING_PRESERVE_FORMATTING=true

# =============================================================================
# QUERY ENGINE CONFIGURATION
# =============================================================================

# Query processing settings
QUERY_SIMILARITY_THRESHOLD=0.3
QUERY_MAX_RESULTS=10
QUERY_CONTEXT_WINDOW=5

# Response generation
QUERY_TEMPERATURE=0.1
QUERY_MAX_TOKENS=1500

# =============================================================================
# ARXIV INTEGRATION
# =============================================================================

# ArXiv API settings
ARXIV_MAX_RESULTS=20
ARXIV_DOWNLOAD_DIR=./downloads/arxiv
ARXIV_AUTO_INDEX=true

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/document_agent.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=daily
LOG_BACKUP_COUNT=7

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Application security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1
SSL_VERIFY=true

# API rate limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Memory management
MAX_MEMORY_USAGE=8GB
ENABLE_GARBAGE_COLLECTION=true

# Concurrency settings
MAX_WORKERS=4
ASYNC_PROCESSING=true

# Caching (Redis configuration for future use)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode
DEBUG=false
DEVELOPMENT_MODE=false

# Testing
PYTEST_CACHE_DIR=.pytest_cache
COVERAGE_REPORT=html

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Docker configuration
CONTAINER_PORT=8501
CONTAINER_HOST=0.0.0.0

# Database settings (for future enhancements)
DATABASE_URL=sqlite:///./data/document_agent.db

# File storage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_UPLOAD_SIZE=100MB

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_ARXIV_INTEGRATION=true
ENABLE_WEB_INTERFACE=true
ENABLE_API_ENDPOINTS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_CONVERSATION_MEMORY=true

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_CUSTOM_MODELS=false
ENABLE_MULTI_LANGUAGE=false
